{
    "name": "peers",
    "version": "1.0.0",
    "scripts": {
        "dev-client": "webpack-dev-server --open",
        "dev-server": "ts-node-dev --project server.tsconfig.json app.ts",
        "dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
        "build-client": "webpack",
        "build-server": "tsc --project server.tsconfig.json",
        "server": "npm run build-server && node ./dist/app.js",
        "build": "npm run build-client && npm run build-server",
        "start": "rm -rf dist/ && npm run build && node ./dist/app.js"
    },
    "nodemonConfig": {
        "ignore": [
            "dist/*"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "overrides": [
            {
                "files": [
                    "*.yml",
                    "*.yaml"
                ],
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "dependencies": {
        "express": "^4.17.1",
        "public-ip": "^4.0.2",
        "simple-peer": "^9.7.2",
        "ws": "^7.3.1",
        "@types/express": "^4.17.8",
        "@types/html-webpack-plugin": "^3.2.3",
        "@types/simple-peer": "^9.6.1",
        "@types/ws": "^7.2.9",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.6.0",
        "html-webpack-plugin": "^4.3.0",
        "nodemon": "^2.0.6",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "devDependencies": {
        "concurrently": "^5.3.0",
        "ts-node-dev": "^1.0.0"
    }
}
